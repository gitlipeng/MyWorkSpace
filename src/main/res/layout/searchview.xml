<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/searchContact"
        android:background="@drawable/badgebackground_whole"
        android:paddingLeft="10.0dip"
        android:paddingRight="43.0dip"
        android:layout_width="fill_parent"
        android:layout_height="36.0dip"
        android:layout_margin="7.0sp"
        android:hint="搜索"
        android:ems="10"
        android:singleLine="true"
        android:drawableLeft="@drawable/search_icon"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/btn_clearInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10.0dip"
        android:src="@drawable/clearbtn"
        android:layout_alignRight="@+id/searchContact"
        android:layout_centerVertical="true" />
</RelativeLayout>